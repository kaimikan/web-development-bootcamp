<%- include("partials/header.ejs") %>

<body>
  <div class="content">
    <% if (locals.review) { %>
    <h3>Update Book Review:</h3>
    <form class="update-form-big flex" action="/update" method="post">
      <input
      id="review-id"
      type="text"
      name="id"
      value="<%= review.id %>"
      autocomplete="off"
      hidden="true"
      />

      <label for="update-title">Book Title: </label>
      <input
        id="update-title"
        type="text"
        name="title"
        value="<%= review.book_title %>"
        autocomplete="off"
      />

      <label for="update-img-url">Image URL: </label>
      <input
        id="update-img-url"
        type="text"
        name="imgURL"
        value="<%= review.image_url %>"
        autocomplete="off"
      />

      <label for="update-review">Review: </label>
      <textarea
        id="update-review"
        type="text"
        name="review"
        autocomplete="off"
        white-space="pre-wrap"
      ><%= review.review %></textarea>

      <label for="update-notes">Notes: </label>
      <textarea
        id="update-notes"
        type="text"
        name="notes"
        autocomplete="off"
        white-space="pre-wrap"
      ><%= review.notes %></textarea>

      <button class="update btn edit-btn" type="submit" >Update</button>
    </form>
    </ul>
    <% } else if (locals.error) { %> <%= error %> <% } else { %>
    <em>Uh-oh, getting nothing from backend</em> <% } %>
  </div>
</body>

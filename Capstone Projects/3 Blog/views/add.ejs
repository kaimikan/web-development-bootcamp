<%- include("partials/header.ejs") %> <% if (isAdmin) { %>
<div class="content form-page">
  <h2>Create a new post</h2>
  <form action="/post" method="POST" class="field-form">
    <div class="field-input">
      <label for="post-title">Title:</label>
      <input type="text" name="post-title" class="text-input" value="" />
    </div>
    <div class="field-input">
      <label for="post-content">Content:</label>
      <textarea
        type="text"
        name="post-content"
        class="text-input larger-input"
        value=""
      ></textarea>
    </div>
    <input
      type="submit"
      class="btn create-btn input-form-btn"
      name="submit-post"
      value="Post"
    />
  </form>
</div>
<% } %> <%- include("partials/footer.ejs") %>
